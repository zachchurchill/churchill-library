<% provide(:title, "Admin") %>
<section class="mx-auto space-y-2">
  <h1 class="text-lg font-semibold leading-7 text-gray-900">Welcome back to the Library!</h1>
  <%= form_with(url: admin_path, scope: :session, local: true, class: "flex flex-col gap-4") do |f| %>
    <div>
      <%= f.label :username, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= f.text_field :username, class: "border border-solid border-slate-300 rounded-md" %>
    </div>
    <div>
      <%= f.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
      <%= f.password_field :password, class: "border border-solid border-slate-300 rounded-md" %>
    </div>
    <%= f.submit "Login", class: "block min-h-11 mx-auto rounded-md bg-green-800 px-28 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-700 cursor-pointer" %>
  <% end %>
</section>
